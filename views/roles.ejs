<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('blocks/head') -%>
        <script>
            async function remove_role(id) {
                let isOK = confirm("вы действительно хотите удалить роль?");
                if (isOK) {
                    let response = await fetch(`/role/remove/${id}`, {
                        method: 'delete',
                    });
                    location.reload()
                }
            }
        </script>
</head>

<body>
    <%- include('blocks/header') -%>
    <a class="btn btn-outline-primary" href="/role_add" role="button">Создать</a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Права</th>
            <th scope="col">Code</th>
            <th scope="col">дествие</th>
          </tr>
        </thead>
            <tbody>
                <% for (let role of roles) { %>
                    <tr>
                        <td>

                            <a class="btn btn-warning" href="/role/<%= role.id %>" role="button">
                                <%= role.id %>
                            </a>
                        </td>
                        <td>
                            <%= role.name %>
                        </td>
                        <td>
                            <%= role.comment %>
                        </td>
                        <td>
                            <%= role.code %>
                        </td>
                        <td>
                            <button onclick="remove_role('<%= role.id %>')"
                                class="btn btn-outline-danger">Удалить</button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
</body>

</html>